# Imagen final solo con runtime
FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app

# Copia solo los archivos publicados
COPY ./publish .

# Configuraci√≥n del entorno
ENV ASPNETCORE_URLS=http://+:5264
