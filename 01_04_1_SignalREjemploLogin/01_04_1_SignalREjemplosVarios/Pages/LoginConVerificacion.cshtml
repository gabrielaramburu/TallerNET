@page "/" 
<!-- notar como la barra determina que esta página sea la pagina por defecto -->
@model _01_04_1_SignalREjemplosVarios.Pages.LoginConVerificacionModel
@{
    Layout = null;
}

<!-- El siguiente codigo fue generado por v0
